# .env dla CLI FS Bridge (clean v2)

# Klucz API OpenAI
OPENAI_API_KEY=__WSTAW_TUTAJ__

# Model
OPENAI_MODEL=gpt-5

# Katalog roboczy
WORKDIR=.

# Stream (wył. domyślnie, bo bywa zablokowany w orgach)
STREAM_PARTIAL=0
REVIEW_PASS=1

# Limity
MAX_BYTES_PER_READ=40000
MAX_OUTPUT_TOKENS=4000
MAX_HISTORY_MSGS=16

# Debug
DEBUG=0
DEBUG_FORMAT=text
# DEBUG_REDACT=1
# DEBUG_FILE=./debug.log

# Ceny (USD per 1M tokens) do liczenia kosztów; jeśli puste, pokażę tylko tokeny
OPENAI_INPUT_PRICE_PER_M=5.00
OPENAI_OUTPUT_PRICE_PER_M=15.00

# Opcjonalne
# ALLOW_SHELL=1
# CMD_TIMEOUT=60
# IGNORE_GLOBS=.git,node_modules,dist,build,__pycache__,.venv,venv
# CLIFS_CONTEXT=./clifs.context.json
