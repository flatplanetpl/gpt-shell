# Klucz API OpenAI
OPENAI_API_KEY=__WSTAW_TUTAJ__

# Model do użycia
OPENAI_MODEL=gpt-5

# Katalog roboczy (domyślnie bieżący)
WORKDIR=.

# Strumieniowanie odpowiedzi: 1 = tak, 0 = nie
STREAM_PARTIAL=1

# Drugi przebieg na auto-recenzję pliku: 1 = tak, 0 = nie
REVIEW_PASS=1

# Limity odczytu/zapisu
MAX_BYTES_PER_READ=60000          # maks. bajtów do odczytu pliku
MAX_OUTPUT_TOKENS=1024            # maks. tokenów w odpowiedzi modelu
MAX_HISTORY_MSGS=24               # maks. liczba wiadomości w historii

# Debugowanie
DEBUG=0                           # 1 = włącz, 0 = wyłącz
DEBUG_FORMAT=text                 # text lub json
# DEBUG_REDACT=1                  # 1 = ukrywaj dane w logach

# Opcjonalne funkcje
# ALLOW_SHELL=1                   # pozwól na wykonywanie komend shellowych
# CMD_TIMEOUT=60                  # limit czasu w sekundach dla komend
# IGNORE_GLOBS=.git,node_modules,dist,build,__pycache__,.venv,venv
# CLIFS_CONTEXT=./clifs.context.json

# Ceny za 1M tokenów (USD) — dla liczenia kosztów
OPENAI_INPUT_PRICE_PER_M=5.00
OPENAI_OUTPUT_PRICE_PER_M=15.00

